
<div class="container" style="margin-top: 100px">
  <%= form_with model: @post do |form| %>
    <div class="form-group">
      <%= label_tag(:postTitle, " Title: ")  %>
      <%= form.email_field :postTitle , class:"form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag(:body, "Body : ")  %>
      <%= form.text_area :body , class:"form-control"%>
    </div>

    <button type="submit" class="btn btn-primary" name="commit" value="Search" data-disable-with="Search">Create</button>

  <% end %>
</div>