
<div class="container">

  <div class="alert alert-primary" role="alert" style="margin-top: 50px">
    Wrong username or password
  </div>
  <%= form_with model: @user do |form| %>
    <div class="form-group">
      <%= label_tag(:username, "Username: ")  %>
      <%= form.email_field :username , class:"form-control"%>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <%= label_tag(:password, "Password: ")  %>
      <%= form.password_field :password , class:"form-control"%>
    </div>

    <button type="submit" class="btn btn-primary" name="commit" value="Search" data-disable-with="Search">Log In</button>
    &nbsp;&nbsp;&nbsp;
    <u><label><a href="">Don't have an account sign up now</a></label></u>
  <% end %>
</div>