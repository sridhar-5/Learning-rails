
<div class="container" style="margin-top: 100px">
  <%= form_with model: @task do |form| %>
    <div class="form-group">
      <%= label_tag(:taskName, "Task Name: ")  %>
      <%= form.email_field :taskName , class:"form-control"%>
    </div>
    <div class="form-group">
      <%= label_tag(:notes, "Notes on the Task: ")  %>
      <%= form.text_area :notes , class:"form-control"%>
    </div>

    <button type="submit" class="btn btn-primary" name="commit" value="Search" data-disable-with="Search">Create</button>

  <% end %>
</div>